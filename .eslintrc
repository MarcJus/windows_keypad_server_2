{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "indent": "off",
        "max-len": [
            "error",
            100
        ],
        "@typescript-eslint/no-explicit-any": "off"
    },
    "env": {
        "node": true,
        "es6": true
    }
}